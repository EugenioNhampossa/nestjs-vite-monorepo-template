generator client {
  provider = "prisma-client-js"
  engineType   = "library"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum LogAction {
  USER_CREATED
  USER_LOGIN
  USER_UPDATED
}

enum Provider {
  LOCAL
  GOOGLE
}

// -----------------------------------------------------------------------------
// 1. AUTHENTICATION AND USER MANAGEMENT (RF01-RF06)
// -----------------------------------------------------------------------------

model User {
  id            String        @id @default(cuid())
  name          String
  email         String        @unique
  provider      Provider
  password      String?
  refreshToken  String?       @db.Text
  emailVerified DateTime?
  isActive      Boolean       @default(true)
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  deletedAt     DateTime?
  updatedAt     DateTime      @updatedAt
  activityLogs  ActivityLog[]

  @@index([email])
  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expiresAt  DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@map("password_reset_tokens")
}

model ActivityLog {
  id        String    @id @default(cuid())
  action    LogAction
  metadata  Json?
  createdAt DateTime  @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("activity_logs")
}
